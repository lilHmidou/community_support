{% extends 'base.html.twig' %}

{% block title %}Page de Tutorat{% endblock %}
{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Page de Tutorat</h1>
        <div class="button-wrapper mb-4">
            {% if not is_granted('ROLE_ETUDIANT') and is_granted('ROLE_MENTOR') %}
                <a href="{{ path('registerMentor') }}" class="btn btn-primary mr-2">Devenir Mentor</a>
                <a href="{{ path('registerEtudiant') }}" class="btn btn-secondary">Devenir Étudiant</a>
            {% endif %}
        </div>

        <section id="testimonies">
            <h2 class="mb-3">Témoignages</h2>
            {% for testimony in testimonies %}
                <div class="testimony card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><strong>{{ testimony.author }}</strong> - {{ testimony.date|date('d/m/Y') }}</h5>
                        <p class="card-text">{{ testimony.content }}</p>
                    </div>
                </div>
            {% else %}
                <p class="text-muted">Aucun témoignage pour le moment.</p>
            {% endfor %}
        </section>
        <section id="faqs">
            <h2 class="mb-3">FAQs</h2>
            <div class="accordion" id="faqAccordion">
                {% for faq in faqs %}
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading{{ loop.index }}">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="true" aria-controls="collapse{{ loop.index }}">
                                {{ faq.question }}
                            </button>
                        </h2>
                        <div id="collapse{{ loop.index }}" class="accordion-collapse collapse {{ loop.first ? 'show' : '' }}" aria-labelledby="heading{{ loop.index }}" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                {{ faq.answer }}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-muted">Aucune FAQ disponible pour le moment.</p>
                {% endfor %}
            </div>
        </section>

    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .button-wrapper > a.btn {
            margin-right: 10px;
            text-decoration: none;
        }
        .card-body h5 {
            font-size: 1.2rem;
        }
        .accordion-button:not(.collapsed) {
            color: #0a58ca;
            background-color: #e7f1ff;
        }
    </style>
{% endblock %}
