{% extends 'base.html.twig' %}

{% block title %}Inscription du mentor{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/tutoratForm.css') }}">
{% endblock %}

{% block body %}

    <div class="section text-center">
        <a href="{{ path('registerEtudiant') }}" class="btn btn-secondary" style="margin-left: -500px;">
            Devenir Étudiant
        </a>

        <div class="container mt-5">
            {{ form_start(mentorForm) }}

            <h4 class="mb-3 pb-3">Inscription du mentor</h4>

            <div class="form-group mt-2">
                {{ form_row(mentorForm.Domain) }}
            </div>
            <div class="form-group mt-2">
                {{ form_row(mentorForm.LearningChoice) }}
            </div>
            <div class="form-group mt-2">
                {{ form_row(mentorForm.Comments) }}
            </div>
            <div class="form-group mt-2">
                {{ form_row(mentorForm.LevelExperience) }}
            </div>
            <div class="form-group mt-2">
                {{ form_row(mentorForm.Availability) }}
            </div>

            <!-- Ajout du champ de téléchargement du document -->
            <div class="form-group mt-2">
                {{ form_row(mentorForm.Doc) }}
            </div>

            <button type="submit" class="btn btn-primary mt-3">S'inscrire</button>

            {{ form_end(mentorForm) }}
        </div>
    </div>
{% endblock %}

