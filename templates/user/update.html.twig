{% extends '/base.html.twig' %}

{% block title %} Modification du profil {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/updateProfile.css') }}">
{% endblock %}

{% block body %}
<div class="flex-wrapper">
    <div class="form-container">
        <h1 class="title">Modification du profil</h1>
        <br>
        {{ form_start(editForm) }}
            <div class="row g-3">
                <div class="col-md-7 col-lg-8">
                    {% for field in editForm %}
                        {% if field.vars.name not in ['cancelChanges', 'saveChanges'] %}
                            {% if field.vars.name == 'Gender' %}
                                {{ form_row(field) }}
                            {% else %}
                                {% set attributes = field.vars.attr|merge({'class': 'form-control editable'}) %}
                                {{ form_row(field, {'attr': attributes}) }}
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>

            <hr class="my-4">

            <div class="row">
                <div class="col">
                    <a href="{{ path('profil') }}">
                        {{ form_row(editForm.cancelChanges) }}
                    </a>
                </div>
                <div class="col">
                    {{ form_row(editForm.saveChanges) }}
                </div>
            </div>
        <br>
        <br>
        {{ form_end(editForm) }}
    </div>
</div>
{% endblock %}
