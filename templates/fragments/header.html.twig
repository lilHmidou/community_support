<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('styles/header.css') }}">
</head>

<header class="header">

    <nav class="nav align-items-center" style="padding-left: 35px;">
        <img src="{{ asset('images/header/logo.png') }}" alt="logo" class="logo">

        <a href="{{ path('home') }}">
            <i class="fa-sharp fa-solid fa-house"></i>
            <span>Accueil</span>
        </a>
        <a href="{{ path('solidarity') }}">
            <i class="fa-solid fa-handshake-angle"></i>
            <span>Solidarité</span>
        </a>
        <a href={{ path('tutorat') }}>
            <i class="fa-sharp fa-solid fa-user-graduate"></i>
            <span>Tutorat</span>
        </a>
        <a href="{{ path('about') }}">
            <i class="fa-solid fa-people-group"></i>
            <span>À Propos </span>
        </a>
        <a href="{{ path('contact') }}">
            <i class="fa-solid fa-address-book"></i>
            <span>Contact</span>
        </a>
        {% if app.user and is_granted('ROLE_ADMIN') %}
            <a href="{{ path('handler') }}">
                <i class="fas fa-list-alt"></i>
                <span>Gestionnaire</span>
            </a>
        {% endif %}
    </nav>

    {% if app.user %}
        <nav class="navbar">
            {% if is_granted('ROLE_USER') %}
                <div class="nav-links">
                    <ul>
                        <li>
                            <a class="dropdown-item" href="{{ path('profil') }}">
                                <i class="fa-solid fa-user"></i>
                                <span>Mon profil</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('changePassword') }}">
                                <i class="fa-solid fa-key"></i>
                                <span>Changer mon mot de passe</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('list_users_posts') }}">
                                <i class="fa-solid fa-pen-to-square"></i>
                                <span>Mes posts</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('list_liked_posts') }}">
                                <i class="fa-solid fa-heart"></i>
                                <span>Mes likes</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('#') }}">
                                <i class="fa-solid fa-book"></i>
                                <span>Mes programmes</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="fa-solid fa-gear"></i>
                                <span>Paramètres</span>
                            </a>
                        </li>
                        <li><a class="dropdown-item" href="/logout">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <span>Se déconnecter</span>
                            </a>
                        </li>
                    </ul>
                </div>


            {% elseif is_granted('ROLE_ADMIN') %}
                <div class="nav-links">
                    <ul>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="fa-solid fa-gear"></i>
                                <span>Paramètres</span>
                            </a>
                        </li>
                        <li><a class="dropdown-item" href="/logout">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <span>Se déconnecter</span>
                            </a>
                        </li>
                    </ul>
                </div>
            {% endif %}
            <btn type="button">
                <i class="fa-solid fa-circle-user menu" style="color: #7e8ab8;"></i>
            </btn>
            {% if is_granted('ROLE_ETUDIANT') %}
                <button class="btn-header">Étudiant</button>
            {% elseif is_granted('ROLE_MENTOR') %}
                <button class="btn-header">Mentor</button>
            {% endif %}
        </nav>
        <hr class="separator" style="margin-top: 134px;">

    {% else %}
        {# Afficher les boutons pour les utilisateurs non connectés #}
        <div class="btn-side">
            <a href="{{ path('login') }}">
                <button class="btn-header">Se connecter</button>
            </a>
            <a href="{{ path('register') }}">
                <button class="btn-header">S'inscrire</button>
            </a>
        </div>
        <hr class="separator">
    {% endif %}
</header>


<!-- Scripts de Bootstrap -->
<script src="{{ asset('controllers/header/active-menu.js') }}"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/d3a313e584.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</html>