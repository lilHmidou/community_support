<!DOCTYPE html>
<body>
<div class="card-front">
    <div class="center-wrap">
        <div class="section text-center">
            <form method="post">

                <h4 class="mb-3 pb-3">Connexion</h4>
                <div class="form-group">
                    <input type="email" class="form-style" placeholder="Email" value="{{ last_username }}" name="email"
                           id="inputEmail" autocomplete="email" required autofocus>
                    <i class="input-icon uil uil-at"></i>
                </div>
                <div class="form-group mt-2">
                    <div class="password-input-wrapper">
                        <input type="password" class="form-style" placeholder="Mot de passe" name="password"
                               id="passwordLogInField" autocomplete="current-password" required>
                        <i class="input-icon uil uil-lock-alt"></i>
                        <button type="button" id="toggleLogInButton" class="eye-toggle-button">
                            <i class="fa-regular fa-eye-slash"></i>
                        </button>

                    </div>


                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <br>

                    <button class="button button-submit" type="submit"> Se connecter</button>
                </div>
                <p class="mb-0 mt-4 text-center"><a href="#" class="link">Mot de passe oubli√© ?</a>
                </p>
            </form>
        </div>
    </div>
</div>
</body>
</html>

