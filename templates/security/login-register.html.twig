{% extends 'base.html.twig' %}

{% block title %} Connexion / Inscription {% endblock %}

{% block body %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('styles/login-register.css') }}">
    {% endblock %}
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    {# Affichage des messages flash #}
    {% for flash_message in app.flashes('warning') %}
        <div class="alert alert-warning">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div id="main-body">
    <div class="section">
    <div class="container">
    <div class="row full-height justify-content-center">
        <div class="col-12 text-center align-self-center py-5">
            <div class="section pb-5 pt-5 pt-sm-2 text-center">
                <h6 class="mb-0 pb-3"><span>Connexion </span><span>Inscription</span></h6>

                <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" {% if isCheckboxChecked %}checked{% endif %}/>
                <label for="reg-log"></label>
                <div class="card-3d-wrap mx-auto">
                    <div class="card-3d-wrapper">
                        {{ include ('security/login.html.twig') }}
                        {{ include ('security/register.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="{{ asset('controllers/password/password-toggle.js') }}"></script>
    <script src="{{ asset('controllers/password/password-validation.js') }}"></script>
    <script src="{{ asset('controllers/active-checkbox.js') }}"></script>
{% endblock %}